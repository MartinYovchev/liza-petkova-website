datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  published Boolean  @default(false)
  images    Image[]

  @@map("posts")
}

model Image {
  id         Int    @id @default(autoincrement())
  url        String
  isFeatured Boolean @default(false)
  post       Post   @relation(fields: [postId], references: [id])
  postId     Int
}
